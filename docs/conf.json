{
	"tags": {
		"allowUnknownTags": false
	},
	"source": {
		"include": ["lib", "docs/external.jsdoc"],
		"exclude": ["test", "samples", "docs", "node_modules"],
		"includePattern": ".+\\.js(doc)?$"
	},
	"opts": {
		"encoding": "utf8",
		"destination": "./docs/out",
		"recurse": true,
		"private": false,
		"lenient": false
	},
	"plugins": ["plugins/markdown"],
	"markdown": {
		"parser": "gfm",
		"hardwrap": false
	}
}
